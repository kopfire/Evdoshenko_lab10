@model LoginViewModel
 
<h2>Вход на сайт</h2>
<img src="~/p14.jpg" alt="alternatetext" width="128" height="128">
 
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">

    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Username">Введите логин</label><br />
            <input type="text" asp-for="Username" />
            <span asp-validation-for="Username" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div><br />
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
<br/>
<a asp-action="Register" asp-controller="Account" class="btn btn-outline-dark">Регистрация</a>